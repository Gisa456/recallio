import { TrendingUp, Flame, Target, Clock } from "lucide-react";

interface StatCardProps {
  icon: React.ElementType;
  label: string;
  value: string;
  change: string;
  positive: boolean;
  gradient: string;
}

const StatCard = ({ icon: Icon, label, value, change, positive, gradient }: StatCardProps) => (
  <div className="p-6 rounded-2xl bg-card shadow-card border border-border/50 hover:shadow-glow transition-all duration-300">
    <div className="flex items-start justify-between mb-4">
      <div className={`w-12 h-12 rounded-xl bg-gradient-to-br ${gradient} flex items-center justify-center shadow-soft`}>
        <Icon className="w-6 h-6 text-primary-foreground" />
      </div>
      <span className={`text-sm font-medium px-2 py-1 rounded-full ${positive ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}`}>
        {positive ? '+' : ''}{change}
      </span>
    </div>
    <div className="text-3xl font-display font-bold text-foreground mb-1">{value}</div>
    <div className="text-sm text-muted-foreground">{label}</div>
  </div>
);

const stats = [
  {
    icon: Target,
    label: "Cards Reviewed",
    value: "1,284",
    change: "12%",
    positive: true,
    gradient: "from-primary to-primary/70",
  },
  {
    icon: Flame,
    label: "Day Streak",
    value: "23",
    change: "3 days",
    positive: true,
    gradient: "from-accent to-accent/70",
  },
  {
    icon: TrendingUp,
    label: "Accuracy Rate",
    value: "87%",
    change: "5%",
    positive: true,
    gradient: "from-green-500 to-green-400",
  },
  {
    icon: Clock,
    label: "Study Time",
    value: "14.5h",
    change: "2.3h",
    positive: true,
    gradient: "from-primary to-accent",
  },
];

const StatsCards = () => {
  return (
    <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {stats.map((stat) => (
        <StatCard key={stat.label} {...stat} />
      ))}
    </div>
  );
};

export default StatsCards;
import { Flame, Trophy } from "lucide-react";

const days = ['S', 'M', 'T', 'W', 'T', 'F', 'S'];

const streakData = [
  { active: true, current: false },
  { active: true, current: false },
  { active: true, current: false },
  { active: true, current: false },
  { active: true, current: false },
  { active: true, current: false },
  { active: true, current: true },
];

const milestones = [
  { days: 7, achieved: true, label: "1 Week" },
  { days: 14, achieved: true, label: "2 Weeks" },
  { days: 21, achieved: true, label: "3 Weeks" },
  { days: 30, achieved: false, label: "1 Month" },
];

const StreakTracker = () => {
  const currentStreak = 23;
  const longestStreak = 31;

  return (
    <div className="p-6 rounded-2xl bg-card shadow-card border border-border/50">
      <div className="flex items-center justify-between mb-6">
        <div>
          <h3 className="text-xl font-display font-bold text-foreground">Streak Tracker</h3>
          <p className="text-sm text-muted-foreground">Keep your learning momentum going!</p>
        </div>
        <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-accent to-accent/70 flex items-center justify-center shadow-soft animate-pulse-soft">
          <Flame className="w-6 h-6 text-primary-foreground" />
        </div>
      </div>

      {/* Current Week */}
      <div className="mb-6">
        <div className="flex items-center justify-between gap-2">
          {days.map((day, index) => (
            <div key={index} className="flex flex-col items-center gap-2">
              <span className="text-xs text-muted-foreground font-medium">{day}</span>
              <div 
                className={`w-10 h-10 rounded-xl flex items-center justify-center transition-all duration-300 ${
                  streakData[index].current 
                    ? 'bg-gradient-to-br from-accent to-accent/70 shadow-glow scale-110' 
                    : streakData[index].active 
                      ? 'bg-gradient-to-br from-primary to-primary/70 shadow-soft' 
                      : 'bg-secondary'
                }`}
              >
                {streakData[index].active && (
                  <Flame className={`w-5 h-5 ${streakData[index].current ? 'text-primary-foreground' : 'text-primary-foreground'}`} />
                )}
              </div>
            </div>
          ))}
        </div>
      </div>

      {/* Stats */}
      <div className="grid grid-cols-2 gap-4 mb-6">
        <div className="p-4 rounded-xl bg-secondary/50">
          <div className="text-2xl font-display font-bold text-foreground">{currentStreak}</div>
          <div className="text-sm text-muted-foreground">Current Streak</div>
        </div>
        <div className="p-4 rounded-xl bg-secondary/50">
          <div className="text-2xl font-display font-bold text-foreground">{longestStreak}</div>
          <div className="text-sm text-muted-foreground">Longest Streak</div>
        </div>
      </div>

      {/* Milestones */}
      <div>
        <h4 className="text-sm font-semibold text-foreground mb-3">Milestones</h4>
        <div className="flex gap-3">
          {milestones.map((milestone) => (
            <div 
              key={milestone.days}
              className={`flex-1 p-3 rounded-xl text-center transition-all duration-300 ${
                milestone.achieved 
                  ? 'bg-gradient-to-br from-primary/10 to-accent/10 border border-primary/20' 
                  : 'bg-secondary/50 border border-transparent'
              }`}
            >
              <Trophy className={`w-4 h-4 mx-auto mb-1 ${milestone.achieved ? 'text-accent' : 'text-muted-foreground'}`} />
              <div className={`text-xs font-medium ${milestone.achieved ? 'text-foreground' : 'text-muted-foreground'}`}>
                {milestone.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
};

export default StreakTracker;
