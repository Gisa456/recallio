const UpcomingReviews = () => {
  const totalDue = upcomingCards.reduce((sum, card) => sum + card.count, 0);

  return (
    <div className="p-6 rounded-2xl bg-card shadow-card border border-border/50">
      <div className="flex items-center justify-between mb-6">
        <div>
          <h3 className="text-xl font-display font-bold text-foreground">Upcoming Reviews</h3>
          <p className="text-sm text-muted-foreground">{totalDue} cards waiting for you</p>
        </div>
        <Button variant="outline" size="sm">
          View All
        </Button>
      </div>

      <div className="space-y-3">
        {upcomingCards.map((card) => (
          <div 
            key={card.id}
            className={`group p-4 rounded-xl border transition-all duration-300 hover:shadow-soft cursor-pointer ${
              card.urgent 
                ? 'bg-gradient-to-r from-green-500/5 to-transparent border-green-500/20 hover:border-green-500/40' 
                : 'bg-secondary/30 border-border/50 hover:border-primary/30'
            }`}
          >
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-3">
                <div className={`w-10 h-10 rounded-xl bg-gradient-to-br ${card.color} flex items-center justify-center shadow-soft`}>
                  <Brain className="w-5 h-5 text-primary-foreground" />
                </div>
                <div>
                  <div className="font-semibold text-foreground">{card.deck}</div>
                  <div className="text-sm text-muted-foreground">{card.count} cards</div>
                </div>
              </div>
              <div className="flex items-center gap-3">
                <div className={`flex items-center gap-1 text-sm ${card.urgent ? 'text-green-600 font-medium' : 'text-muted-foreground'}`}>
                  <Clock className="w-4 h-4" />
                  {card.dueIn}
                </div>
                <ArrowRight className="w-4 h-4 text-muted-foreground opacity-0 group-hover:opacity-100 transition-opacity" />
              </div>
            </div>
          </div>
        ))}
      </div>

      {/* Start Review CTA */}
      <div className="mt-6 p-4 rounded-xl bg-gradient-to-r from-primary/10 to-accent/10 border border-primary/20">
        <div className="flex items-center justify-between">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 rounded-xl gradient-hero flex items-center justify-center shadow-glow">
              <Brain className="w-5 h-5 text-primary-foreground" />
            </div>
            <div>
              <div className="font-semibold text-foreground">Ready to study?</div>
