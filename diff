export default DashboardHeader;
import { PieChart, Pie, Cell, ResponsiveContainer, Legend } from 'recharts';

const data = [
  { name: 'Mastered', value: 145, color: 'hsl(142, 76%, 36%)' },
  { name: 'Learning', value: 89, color: 'hsl(245, 58%, 51%)' },
  { name: 'Reviewing', value: 56, color: 'hsl(32, 95%, 55%)' },
  { name: 'New', value: 34, color: 'hsl(240, 15%, 75%)' },
];

const CustomLegend = ({ payload }: any) => (
  <div className="flex flex-wrap justify-center gap-4 mt-4">
    {payload.map((entry: any, index: number) => (
      <div key={index} className="flex items-center gap-2">
        <div 
          className="w-3 h-3 rounded-full" 
          style={{ backgroundColor: entry.color }}
        />
        <span className="text-sm text-muted-foreground">{entry.value}</span>
      </div>
    ))}
  </div>
);

const MasteryChart = () => {
  const totalCards = data.reduce((sum, item) => sum + item.value, 0);
  const masteredPercent = Math.round((data[0].value / totalCards) * 100);

  return (
    <div className="p-6 rounded-2xl bg-card shadow-card border border-border/50">
      <div className="flex items-center justify-between mb-4">
        <div>
          <h3 className="text-xl font-display font-bold text-foreground">Card Mastery</h3>
          <p className="text-sm text-muted-foreground">{totalCards} total cards across all decks</p>
        </div>
      </div>

      <div className="h-56 relative">
        <ResponsiveContainer width="100%" height="100%">
          <PieChart>
            <Pie
              data={data}
              cx="50%"
              cy="50%"
              innerRadius={60}
              outerRadius={85}
              paddingAngle={4}
              dataKey="value"
              stroke="none"
            >
              {data.map((entry, index) => (
                <Cell key={`cell-${index}`} fill={entry.color} />
              ))}
            </Pie>
            <Legend content={<CustomLegend />} />
          </PieChart>
        </ResponsiveContainer>
        
        {/* Center Text */}
        <div className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-center" style={{ marginTop: '-12px' }}>
          <div className="text-3xl font-display font-bold text-foreground">{masteredPercent}%</div>
          <div className="text-xs text-muted-foreground">Mastered</div>
        </div>
      </div>

      {/* Stats Grid */}
      <div className="grid grid-cols-2 gap-3 mt-4">
        {data.map((item) => (
          <div key={item.name} className="p-3 rounded-xl bg-secondary/50 flex items-center justify-between">
            <div className="flex items-center gap-2">
              <div className="w-2 h-2 rounded-full" style={{ backgroundColor: item.color }} />
              <span className="text-sm text-muted-foreground">{item.name}</span>
            </div>
            <span className="text-sm font-semibold text-foreground">{item.value}</span>
          </div>
        ))}
      </div>
    </div>
  );
};

export default MasteryChart;
import { AreaChart, Area, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer } from 'recharts';

const data = [
  { day: 'Mon', cards: 45, accuracy: 82 },
  { day: 'Tue', cards: 62, accuracy: 85 },
  { day: 'Wed', cards: 38, accuracy: 78 },
  { day: 'Thu', cards: 71, accuracy: 90 },
  { day: 'Fri', cards: 55, accuracy: 88 },
  { day: 'Sat', cards: 89, accuracy: 92 },
  { day: 'Sun', cards: 76, accuracy: 86 },
];

const CustomTooltip = ({ active, payload, label }: any) => {
  if (active && payload && payload.length) {
    return (
      <div className="bg-card border border-border rounded-xl p-3 shadow-card">
        <p className="font-display font-semibold text-foreground mb-1">{label}</p>
        <p className="text-sm text-primary">
          <span className="font-medium">{payload[0].value}</span> cards
        </p>
        <p className="text-sm text-accent">
          <span className="font-medium">{payload[1].value}%</span> accuracy
        </p>
      </div>
    );
  }
  return null;
};

